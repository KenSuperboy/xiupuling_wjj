<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:background="@color/blue"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/toolbar_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_return_left"
            android:drawablePadding="6.7dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/withe"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="联动定投"
            android:textColor="@color/withe"
            android:textSize="@dimen/title_font_size"  />


    </RelativeLayout>


    <!--新建投放关系-->
    <LinearLayout
        android:id="@+id/linear_zhongdaun_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/menu_selector"
        android:orientation="horizontal"
        android:padding="@dimen/menu_pading">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按终端单独审核"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textColor="#414141" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/splite_height"
        android:background="@color/splite" />

    <!--选择已有的投放关系-->
    <LinearLayout
        android:id="@+id/linear_zuoping_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/menu_selector"
        android:orientation="horizontal"
        android:padding="@dimen/menu_pading">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按作品集中审核"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textColor="#414141" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/splite_height"
        android:background="@color/splite" />

</LinearLayout>


