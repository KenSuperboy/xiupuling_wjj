<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_edit_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.gohoc.xiupuling.ui.account.AccountEditNameActivity">

    <include
        layout="@layout/toolbar_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/withe"
        android:gravity="center"

        android:orientation="horizontal"
       >


        <com.gohoc.xiupuling.utils.ClearEditText
            android:id="@+id/setting_nike_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="11"
            android:gravity="left|center"
            android:hint="请输入昵称"
            android:inputType="text"
            android:textSize="@dimen/menu_font_size"
            android:paddingLeft="10dp"/>


    </LinearLayout>
</LinearLayout>
