<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/withe"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布版权购买详情"
                    android:textColor="#929292"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="26dp"
                android:background="@color/withe"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingBottom="100dp">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sadfasf"
                    android:gravity="center"
                    android:textColor="@color/df_font"
                    android:layout_centerHorizontal="true"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/tips_font"
                    android:text="dsfdasf" />
                <TextView
                    android:id="@+id/order_no_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_tv"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="订单号："
                    android:textSize="13sp"
                    android:textColor="@color/tips_font"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:layout_marginTop="24dp"
                android:background="@color/splite" />

            <LinearLayout
                android:id="@+id/push_lv"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/menu_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即投放"
                    android:textColor="@color/df_font"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="@color/tips_font"
                    android:text=""/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:src="@mipmap/icon_arrow_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />
            <LinearLayout
                android:id="@+id/pr_lv"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/menu_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建立待展消息"
                    android:textColor="@color/df_font"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="@color/tips_font"
                    android:text=""/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:src="@mipmap/icon_arrow_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>


