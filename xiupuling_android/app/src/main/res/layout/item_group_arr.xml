<?xml version="1.0" encoding="utf-8"?>

<com.mcxtzhang.swipemenulib.SwipeMenuLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="false"
    app:swipeEnable="false">
    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="1dp"
        android:background="@color/withe"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp">


        <ImageView
            android:id="@+id/termianl_og_iv"
            android:layout_width="18dp"
            android:layout_height="14.7dp"
            android:src="@mipmap/icon_group_add_port"

            />

        <TextView
            android:id="@+id/termianl_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text=""
            android:textColor="@color/df_font"
            android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        app:srcCompat="@mipmap/icon_arrow_right" />


    </LinearLayout>
    <!-- 以下都是侧滑菜单的内容依序排列 -->


    <LinearLayout
        android:id="@+id/mBehindViews"
        android:layout_width="90dp"
        android:layout_height="49dp"
        android:background="#FF0000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="移出本群组"
            android:textColor="@color/withe" />


    </LinearLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>


