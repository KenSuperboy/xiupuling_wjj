<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.gohoc.xiupuling.ui.account.PersonlCertificationInfoActivity">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.gohoc.xiupuling.widget.roundimage.CircleImageView
                android:id="@+id/user_pic_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/icon_usercenter_morentouxiang" />

            <TextView
                android:id="@+id/ctf_inf_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/certifi_in_tips"
                android:textColor="#515151" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFE0E1"
                android:layout_margin="25dp"/>

            <TextView
                android:text="用户名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_tv"
                android:textColor="#505050"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:text="身份证"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idcard_tv"
                android:textColor="#949494"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
