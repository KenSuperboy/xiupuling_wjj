<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.gohoc.xiupuling.ui.account.Register2Activity">

    <include
        android:id="@+id/toolbar_tow_i"
        layout="@layout/toolbar_tow_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:background="@color/gallery_text_gray"/>

    <com.gohoc.xiupuling.utils.ClearEditText
        android:id="@+id/et_vip"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        android:hint="请输入获得的VIP码"
        android:textSize="13sp"
        android:gravity="top"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textColorHint="@color/gallery_text_gray"
        android:textColor="@color/tv_3"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gallery_text_gray"/>

</LinearLayout>

