<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:baselineAligned="false"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/withe"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">


                <ImageView
                    android:id="@+id/wk_covers_iv"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@color/base_title_color" />


                <TextView
                    android:id="@+id/wk_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/wk_covers_iv"
                    android:text=""
                    android:textColor="@color/df_font"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/wk_activity_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/wk_title_tv"
                    android:layout_alignLeft="@+id/wk_title_tv"
                    android:layout_marginTop="10dp"
                    android:lines="1"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/wk_covers_iv"
                    android:text=""
                    android:textColor="@color/tips_font"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/wk_time_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/time_tv"
                    app:srcCompat="@mipmap/icon_show_time_gray" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#878787"
                    android:textSize="11sp" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:layout_marginTop="18dp"
                android:background="@color/splite" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/withe"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已播出汇总情况"
                    android:textColor="@color/df_font"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sp1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/splite_height"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="12dp"
                    android:background="@color/splite" />


                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="38dp"
                    app:srcCompat="@mipmap/icon_lishixinxi_por" />

                <TextView
                    android:id="@+id/terinal_c_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/iv1"
                    android:layout_alignTop="@+id/iv1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:gravity="center"
                    android:text="0个"
                    android:textColor="@color/df_font"
                    android:textSize="13sp" />


                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp1"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="21dp"
                    android:layout_toRightOf="@+id/terinal_c_tv"
                    app:srcCompat="@mipmap/icon_show_rate_gold" />

                <TextView
                    android:id="@+id/w_c_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/iv2"
                    android:layout_alignTop="@+id/iv2"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv2"
                    android:gravity="center"
                    android:text="每终端平均跨0周"
                    android:textColor="@color/df_font"
                    android:textSize="11sp" />


                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv2"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="33dp"
                    android:layout_toRightOf="@+id/terinal_c_tv"
                    app:srcCompat="@mipmap/icon_show_loop_gold" />

                <TextView
                    android:id="@+id/r_c_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/iv3"
                    android:layout_alignTop="@+id/iv3"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv3"
                    android:gravity="center"
                    android:text="总计轮播0次"
                    android:textColor="@color/df_font"
                    android:textSize="11sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:layout_marginTop="24dp"
                android:background="@color/splite" />

            <LinearLayout
                android:id="@+id/push_lv"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/menu_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投放地点"
                    android:textColor="@color/df_font"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="终端列表"
                    android:textColor="@color/tips_font"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:src="@mipmap/icon_arrow_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />

            <LinearLayout
                android:id="@+id/pr_lv"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/menu_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预览作品"
                    android:textColor="@color/df_font"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="视频流量较大,建议wifi下操作"
                    android:textColor="@color/tips_font"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:src="@mipmap/icon_arrow_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />

            <LinearLayout
                android:id="@+id/button_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/remober_pssword_ll"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/login_bt_selector"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="再次投放"
                    android:textColor="@color/withe"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>


