<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/withe"
    android:orientation="vertical"
    tools:context="com.gohoc.xiupuling.ui.VerificationCodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp">


        <EditText
            android:id="@+id/verification_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/verification_input_selector"
            android:ems="10"
            android:hint="请输入图片验证码"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            android:textSize="13sp" />

        <TextView
            android:id="@+id/verification_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/verification_et"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/verification_et"
            android:background="#27ABFD"
            android:gravity="center"
            android:padding="6.5dp"
            android:text="0000"
            android:textColor="@color/withe"
            android:textSize="18sp" />
        <!--     <com.gohoc.xiupuling.utils.VerifyCode
                 android:layout_width="50dp"
                 android:layout_height="40dp"
                 android:layout_alignParentRight="true"
                 android:layout_marginLeft="15dp"
                 android:layout_toRightOf="@id/verification_et"
                 android:id="@+id/verification_vc"/>-->

        <TextView
            android:id="@+id/verification_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verification_et"
            android:gravity="right"
            android:textSize="11sp"
            android:text="看不清，换一个？"
            android:textColor="@color/tips_font"
            android:layout_alignRight="@id/verification_tv"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#efeff4" />

    <LinearLayout
        android:id="@+id/verification_confim_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/withe"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:text="确定" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#efeff4" />

    <LinearLayout
        android:id="@+id/verification_cancel_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/withe"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#efeff4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/withe"
            android:gravity="center"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>
