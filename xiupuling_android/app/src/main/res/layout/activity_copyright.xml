<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderby1_tv"
            android:layout_width="82dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/bt_history_p_sp"
            android:gravity="center"
            android:textColor="@color/withe"
             android:layout_marginLeft="19dp"
            android:text="近一个月" />

        <TextView
            android:id="@+id/orderby2_tv"
            android:layout_width="82dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_marginLeft="38dp"
            android:background="@drawable/bt_history_n_sp"
            android:gravity="center"
            android:text="近三个月" />

        <TextView
            android:id="@+id/orderby3_tv"
            android:layout_width="82dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/bt_history_n_sp"
            android:gravity="center"
            android:text="  一年  " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/splite_height"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/splite"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="交易记录" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="@dimen/splite_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="19dp"
            android:layout_weight="1"
            android:background="@color/splite" />

    </LinearLayout>

    <TextView
        android:id="@+id/no_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="19dp"
        android:text=""
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


</LinearLayout>
