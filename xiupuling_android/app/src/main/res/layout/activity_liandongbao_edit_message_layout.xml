<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
              android:fitsSystemWindows="true"
    android:background="@color/bgc">

    <!--编辑联动包信息-->
    <include layout="@layout/toolbar_tow"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/splite">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/withe">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="更换封面"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black_text"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/img_liandong_fm"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_arrow_right"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_content_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/bgc">
    </LinearLayout>

    <include layout="@layout/line_content_layout"/>

    <!--早餐展示结合-->
    <LinearLayout
        android:id="@+id/linear_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="名称"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black_text"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text=""
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gallery_text_gray"/>

    </LinearLayout>

    <include layout="@layout/line_content_layout"/>




</LinearLayout>
