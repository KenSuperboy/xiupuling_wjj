<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:fitsSystemWindows="true"
    tools:context="com.gohoc.xiupuling.ui.account.FindPassword2Activity">

    <include
        android:id="@+id/toolbar_tow_i"
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />


    <LinearLayout
        android:id="@+id/register_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_tow_i"
        android:background="@mipmap/img_zhuce_bg_2"
        android:orientation="vertical">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/register2_tips_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_head"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register2_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register2_tips" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_vcode_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register2_tips_ll"
        android:background="@color/withe"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="验证码："
            android:textSize="13sp"/>

        <com.gohoc.xiupuling.utils.ClearEditText
            android:id="@+id/register_phone_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="11"
            android:textSize="13sp"
            android:hint="请输入短信中的验证码"
            android:inputType="text"
/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sumbit_button_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_vcode_ll"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_bt_selector"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提交验证码"
            android:textColor="@color/withe" />
    </LinearLayout>


</RelativeLayout>

