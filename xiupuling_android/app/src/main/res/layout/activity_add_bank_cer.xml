<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">


            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_below="@+id/toolbar"
                android:layout_centerInParent="true"
                android:layout_marginTop="72dp">

                <RelativeLayout
                    android:id="@+id/xiaofeidaren_rv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/identity_buyer_active"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="50%">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        app:srcCompat="@mipmap/icon_gerenrenzheng" />

                    <TextView
                        android:id="@+id/p_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv1"

                        android:gravity="center"
                        android:text="申请个人验证"
                        android:textColor="@color/withe"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivf1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/icon_gerenrenzheng2" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jizhu_rv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/xiaofeidaren_rv"
                    android:background="@mipmap/identity_zhanzhu_active"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="50%">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        app:srcCompat="@mipmap/icon_gerenrenzheng_xz" />

                    <TextView
                        android:id="@+id/e_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv2"
                        android:gravity="center"
                        android:text="申请企业验证"
                        android:textColor="@color/withe"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivf2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/icon_qiyerenzheng2" />
                </RelativeLayout>

            </android.support.percent.PercentRelativeLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:text="@string/add_bank_tips2"
                android:textColor="@color/tips_font"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />

            <LinearLayout
                android:id="@+id/personl_ll"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/unable"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16sp"
                    android:text="个人账户"
                    android:textColor="@color/df_font"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/p_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="未通过身份验证"
                    android:textColor="#929292"
                    android:textSize="13sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    app:srcCompat="@mipmap/icon_arrow_right" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />

            <LinearLayout
                android:id="@+id/enterprise_lv"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/unable"
                android:gravity="center"

                android:orientation="horizontal">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16sp"
                    android:text="企业账户"
                    android:textColor="@color/df_font"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/e_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="未通过身份验证"
                    android:textColor="#929292"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    app:srcCompat="@mipmap/icon_arrow_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


