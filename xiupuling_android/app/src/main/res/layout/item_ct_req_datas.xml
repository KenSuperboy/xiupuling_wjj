<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/withe"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:layout_marginTop="8.6dp"
 >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_iv"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/shop_logo_add_nor" />

        <ImageView
            android:id="@+id/del_iv"
            app:srcCompat="@mipmap/icon_del_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView1"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_iv"
            android:visibility="visible" />
    </RelativeLayout>

    <EditText
        android:id="@+id/ds_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="top"
        android:hint="请描述该照片想说明什么问题或您希望怎么用它？"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:paddingLeft="10dp"
        android:paddingRight="18.3dp"
        android:paddingTop="18.3dp"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_pic_tips_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="18.3dp"
        android:text="@string/create_req_pic_tips" />
</LinearLayout>
