<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_white_round"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:textColor="@color/gallery_text_gray"/>

    <TextView 
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13sp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:textColor="@color/tv_3"
        android:layout_gravity="center_horizontal"

        android:text="检测到你的账号在其他设备登录\n需要重新登录吗?"/>

    </LinearLayout>
    <include layout="@layout/line_content_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_left_blue_round"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="确定"
            android:textStyle="normal"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_right_blue_round"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="取消"
            android:textStyle="normal"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>