<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用详情"
                    android:textColor="#929292"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/push_req_money_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/df_font"
                android:text="10元" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="43dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:text="星级(1级)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />


                <TextView
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:id="@+id/push_req_money1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10元" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="43dp"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星级抵扣券" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />


                <TextView
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:id="@+id/push_req_money2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0元" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="43dp"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作品时长" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />


                <TextView
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:id="@+id/push_req_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30S" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="43dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长系数" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />


                <TextView
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:id="@+id/push_req_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="26dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp">

                <TextView
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:id="@+id/money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单屏播放价格:" />

                <TextView
                    android:id="@+id/push_req_money_r_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/money_tv"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/df_font"
                    android:textSize="13sp"
                    android:layout_toRightOf="@+id/money_tv"
                    android:text="()" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/push_req_money_ps_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hedgehog:srcCompat="@mipmap/tips_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="计费规则" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>


