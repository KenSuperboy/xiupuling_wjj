<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/toolbar_tow"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:background="@color/withe">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/img_liandong_fm"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="作品联动包名称"
                android:textColor="@color/black_text"/>

            <TextView
                android:id="@+id/tv_shiduan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/gallery_text_gray"/>

            <TextView
                android:id="@+id/tv_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/gallery_text_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:textSize="13sp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="10dp"
                    android:textColor="@color/gallery_text_gray"
                    android:drawableRight="@mipmap/icon_arrow_right"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_content_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/bgc">

    </LinearLayout>

    <include layout="@layout/line_content_layout"/>

        <!--有数据的界面-->
        <LinearLayout
            android:id="@+id/linear_data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="投放联动作品"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_toufang"
                    android:textColor="@color/blue"/>

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_left"
                    android:text="(共5个)"
                    android:textColor="@color/blue"/>

                <ImageView
                    android:id="@+id/iv_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@mipmap/btn_tfqz"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>





        </LinearLayout>

        <View
            android:id="@+id/middle_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40dp"
            android:visibility="gone"
            android:background="@color/splite"/>

        <com.gohoc.xiupuling.view.MyListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@null"
            >

        </com.gohoc.xiupuling.view.MyListView>

    </LinearLayout>




    </ScrollView>

    <!--空数据的页面-->
    <RelativeLayout
        android:id="@+id/relative_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/withe">

        <TextView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="亲，您的联动包还未有任何作品\n你可以添加作品到多屏联动包中"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:layout_centerInParent="true"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/withe"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:background="@color/blue"
            android:layout_alignParentBottom="true"
            android:text="添加作品"/>


    </RelativeLayout>

</LinearLayout>
