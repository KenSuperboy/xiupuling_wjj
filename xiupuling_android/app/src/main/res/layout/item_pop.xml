<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="#0000"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_edit_dt_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/location_pop_sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="门店在这儿吗?"
            android:textColor="#545454"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/pop_location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:ems="10"
            android:lines="1"
            android:maxEms="10"
            android:text="广东深深圳市南山区中心"
            android:textColor="#9C9C9C"
            android:textSize="9sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/location_pop_bottom_sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="编辑详情"
                android:textColor="@color/withe"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_you_jiantouxiao" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>