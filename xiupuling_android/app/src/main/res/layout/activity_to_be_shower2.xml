<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/id_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/zhanzhu_step_two" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bgc" />

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_below="@+id/toolbar"
                android:layout_centerInParent="true"
                android:layout_marginTop="72dp">

                <RelativeLayout
                    android:id="@+id/xiaofeidaren_rv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/identity_buyer_active"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="50%">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        app:srcCompat="@mipmap/icon_gerenrenzheng" />

                    <TextView
                        android:id="@+id/p_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/withe"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivf1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        app:srcCompat="@mipmap/icon_gerenrenzheng2" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jizhu_rv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/xiaofeidaren_rv"
                    android:background="@mipmap/identity_zhanzhu_active"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="50%">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        app:srcCompat="@mipmap/icon_gerenrenzheng_xz" />

                    <TextView
                        android:id="@+id/e_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv2"

                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/withe"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivf2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        app:srcCompat="@mipmap/icon_qiyerenzheng2" />
                </RelativeLayout>

            </android.support.percent.PercentRelativeLayout>

            <LinearLayout
                android:id="@+id/save_button_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="19.3dp"
                android:background="#cbcbcb"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/withe"
                    android:textSize="19sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


