<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.gohoc.xiupuling.ui.account.CertificationActivity">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/company_auth_top_logo" />

            <TextView
                android:id="@+id/ctf_inf_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/certifi_in_tips"
                android:textColor="#515151" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFE0E1"
                android:layout_margin="25dp"/>

            <TextView
                android:text="公司名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commpany_name_tv"
                android:textColor="#505050"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:text="营业执照："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yingyezhizhao_tv"
                android:textColor="#949494"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:text="税务登记号："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shuiwudengji_tv"
                android:textColor="#949494"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:text="组织机构代码证号："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zhuzijiegou_tv"
                android:textColor="#949494"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
