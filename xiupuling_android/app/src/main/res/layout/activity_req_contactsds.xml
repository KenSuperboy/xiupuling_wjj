<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/withe"
    android:orientation="vertical"
>

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/withe"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="15.7dp"
                android:paddingRight="15dp"
                android:paddingTop="25dp">


                <com.gohoc.xiupuling.widget.roundimage.CircleImageView
                    android:id="@+id/ds_pic_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/icon_usercenter_morentouxiang"
                  />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ds_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text=""
                        android:textColor="#383838"
                        android:textSize="14sp" />

                    <com.gohoc.xiupuling.widget.RatingBar
                        android:id="@+id/ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="left"
                        android:layout_marginTop="17dp"
                        android:isIndicator="true"
                        hedgehog:halfstart="true"
                        hedgehog:starCount="5"
                        hedgehog:starEmpty="@null"
                        hedgehog:starFill="@mipmap/icon_star_gold"
                        hedgehog:starHalf="@mipmap/icon_star_gray"
                        hedgehog:starImageHeight="15.3dp"
                        hedgehog:starImageWidth="15.3dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/ds_indtrods_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingRight="15dp"
                android:paddingLeft="16dp"
                android:text=""
                android:textColor="#a5a5a5"
                android:background="@color/withe"
                android:paddingBottom="25dp"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/splite_height"
                android:background="@color/splite" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hedgehog:srcCompat="@mipmap/icon_lx_design_mobile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:textSize="14sp"
                    android:id="@+id/ds_moblie_tv"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hedgehog:srcCompat="@mipmap/icon_lx_design_qq" />

                <TextView
                    android:id="@+id/ds_qq_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:textSize="14sp"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp">

                <ImageView

                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hedgehog:srcCompat="@mipmap/icon_lx_design_email" />

                <TextView
                    android:id="@+id/ds_email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:textSize="14sp"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hedgehog:srcCompat="@mipmap/icon_lx_design_web" />

                <TextView
                    android:id="@+id/ds_web_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:textSize="14sp"
                    android:text="" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



