<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:gravity="center"
        android:text="通过个人验证将免费获得"
        android:textColor="@color/withe"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/tips_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tips_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/img_tips_pvapply" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tips_iv"
        android:layout_alignRight="@+id/tips_iv"
        android:layout_below="@+id/tips_iv"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/to_tv"
            android:layout_width="180dp"
            android:layout_height="39dp"
            android:background="@drawable/blue_c_soile_sp"
            android:gravity="center"
            android:text="好的，我知道了"
            android:textColor="@color/withe"
            android:textSize="13dp" />
    </LinearLayout>


</RelativeLayout>