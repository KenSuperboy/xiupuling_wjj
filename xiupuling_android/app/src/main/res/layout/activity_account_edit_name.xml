<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_edit_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.gohoc.xiupuling.ui.account.AccountEditNameActivity">

    <include
        layout="@layout/toolbar_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
       >


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/content_line_new"/>

        <com.gohoc.xiupuling.utils.ClearEditText
            android:id="@+id/setting_nike_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/withe"
            android:ems="11"
            android:gravity="left|center"
            android:hint="请输入昵称"
            android:inputType="text"
            android:textSize="@dimen/menu_font_size"
            android:paddingLeft="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/content_line_new"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/gallery_text_gray"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:text="3-8位数字或字母，后缀统一为：.xpling.com"/>

    </LinearLayout>
</LinearLayout>
