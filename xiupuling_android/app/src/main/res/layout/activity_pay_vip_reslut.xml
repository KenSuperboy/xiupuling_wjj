<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_tow_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品购买详情"
                    android:textColor="#929292"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splite_height"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/splite"
                    android:gravity="center" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="26dp"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/df_font"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/tips_font"
                    android:text="" />
                <TextView
                    android:id="@+id/order_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_tv"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentLeft="true"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/df_font"/>
                <TextView
                    android:id="@+id/tips_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_no_tv"
                    android:layout_marginTop="180dp"
                    android:textSize="14sp"
                    android:textColor="@color/tips_font"
                    android:text="" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/push_req_money_ps_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hedgehog:srcCompat="@mipmap/tips_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="权限说明" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>


