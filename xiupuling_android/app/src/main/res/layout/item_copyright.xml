<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/token_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="#333333"
        android:text="dsafdasf" />

    <TextView
        android:id="@+id/token_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/token_title_tv"
         android:layout_marginTop="8dp"
        android:textSize="11sp"
        android:textColor="#929292"
        android:text="dsfadffdsfsaf" />

    <TextView
        android:id="@+id/token_v_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="13sp"
        android:textColor="#540000"
        android:text="0" />
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/token_time_tv"
        android:layout_height="@dimen/splite_height"
        android:layout_marginTop="13dp"
        android:background="@color/splite" />
</RelativeLayout>

